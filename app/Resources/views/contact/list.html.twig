{% include 'base.html.twig' %}

{% block body %}

    <div class="container-fluid mt-4 mb-4 col-12">
        <h3>Contact List</h3>
        <table class="table">
            <thead>
            <tr>
                <th scope="col"><a href="{{ path('contact_add') }}" class="btn btn-secondary">Add</a>
                </th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Birthday</th>
                <th scope="col">E-mail</th>
                <th scope="col">Picture</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
                <tbody>
                {% if contacts %}
                    {% for contact in contacts %}
                        <tr>
                            <th scope="row">{{ contact.id }}</th>
                            <td>{{ contact.firstName }}</td>
                            <td>{{ contact.lastName }}</td>
                            <td>{{ contact.street  }} {{ contact.streetNumber }} {{ contact.zip }}</td>
                            <td>{{ contact.city }}</td>
                            <td>{{ contact.country }}</td>
                            <td>{{ contact.phoneNumber }}</td>
                            <td>{{ contact.birthDay|date('Y-m-d') }}</td>
                            <td>{{ contact.email }}</td>
                            <td><a href="{{ asset('uploads/picture/' ~ contact.picture) }}">View Picture</a></td>
                            <td><a href="{{ path('contact_edit', {"id": contact.id}) }}">Edit</a>|<a href="{{ path('contact_delete', {"id": contact.id}) }}">Delete</a></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="11">No Contacts found.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>

{% endblock %}