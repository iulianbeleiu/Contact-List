{% include 'base.html.twig' %}

{% block body %}
    <div class="container-fluid mt-4 mb-4 col-8">
        <a href="{{ path('contact_list') }}" class="btn btn-outline-primary mb-2">Back to contact list</a>
        <h3>Add a new contact</h3>
        {{ form_start(contactForm) }}
            <div class="form-group">
                {{ form_label(contactForm.firstName) }}
                {{ form_widget(contactForm.firstName) }}
                {{ form_errors(contactForm.firstName) }}
            </div>
            <div class="form-group">
                {{ form_label(contactForm.lastName) }}
                {{ form_widget(contactForm.lastName) }}
                {{ form_errors(contactForm.lastName) }}
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        {{ form_label(contactForm.street) }}
                        {{ form_widget(contactForm.street) }}
                        {{ form_errors(contactForm.street) }}
                    </div>
                    <div class="col-3">
                        {{ form_label(contactForm.streetNumber) }}
                        {{ form_widget(contactForm.streetNumber) }}
                        {{ form_errors(contactForm.streetNumber) }}
                    </div>
                    <div class="col-3">
                        {{ form_label(contactForm.zip) }}
                        {{ form_widget(contactForm.zip) }}
                        {{ form_errors(contactForm.zip) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        {{ form_label(contactForm.city) }}
                        {{ form_widget(contactForm.city) }}
                        {{ form_errors(contactForm.city) }}
                    </div>
                    <div class="col-6">
                        {{ form_label(contactForm.country) }}
                        {{ form_widget(contactForm.country) }}
                        {{ form_errors(contactForm.country) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        {{ form_label(contactForm.phoneNumber) }}
                        {{ form_widget(contactForm.phoneNumber) }}
                        {{ form_errors(contactForm.phoneNumber) }}
                    </div>
                    <div class="col-6">
                        {{ form_label(contactForm.birthDay) }}
                        {{ form_widget(contactForm.birthDay) }}
                        {{ form_errors(contactForm.birthDay) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(contactForm.email) }}
                {{ form_widget(contactForm.email) }}
                {{ form_errors(contactForm.email) }}
            </div>

            {% if contactForm.vars.data.picture %}
                <a href="{{ asset(pictureBasePath ~ contactForm.vars.data.picture) }}">
                    <img class="article-img" src="{{ asset(pictureBasePath ~ contactForm.vars.data.picture)|imagine_filter('squared_thumbnail_small') }}">
                </a>
            {% endif %}
            <div class="form-group">
                {{ form_label(contactForm.pictureFile) }}
                {{ form_widget(contactForm.pictureFile) }}
                {{ form_errors(contactForm.pictureFile) }}
            </div>
            <div class="form-group">
                {{ form_label(contactForm.submit) }}
                {{ form_widget(contactForm.submit) }}
            </div>
        {{ form_end(contactForm) }}
    </div>
{% endblock %}